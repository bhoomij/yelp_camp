<% include ../partials/header %>

    <div class="contianer">
        <div style="width: 30%;margin: 25px auto;">
            <h2 class="text-center">Edit Campground</h2>
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroud[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campgroud[price]" value="<%= campground.price %>" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroud[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroud[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit">
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>