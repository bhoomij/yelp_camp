<% include ../partials/header %>

    <div class="contianer">
        <div style="width: 30%;margin: 25px auto;">
            <h2 class="text-center">Edit Comment
            </h2>
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit">
                </div>
            </form>

            <a href="/campgrounds/<%= campgroundId %>">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>